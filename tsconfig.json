{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "src",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@core": [
        "core"
      ],
      "@core/*": [
        "core/*"
      ],
      "@pipe": [
        "pipe"
      ],
      "@pipe/*": [
        "pipe/*"
      ],
      "@cli": [
        "cli"
      ],
      "@cli/*": [
        "cli/*"
      ],
      "@common": [
        "common"
      ],
      "@common/*": [
        "common/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
