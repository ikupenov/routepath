{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@routepath/core": [
        "packages/core"
      ],
      "@routepath/common": [
        "packages/common"
      ],
      "@routepath/pipe": [
        "packages/pipe"
      ],
      "@routepath/cli": [
        "packages/cli"
      ],
    },
  }
}
